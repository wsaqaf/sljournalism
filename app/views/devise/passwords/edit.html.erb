<div class="container">
<h2><%= t('devise.account.change_pw') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-claim">
    <%= f.input :password,
                label: t('devise.account.new_pw'),
                required: true,
                autofocus: true,
                hint: t('devise.account.new_pw_h'),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: t('devise.account.confirm_pw'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.account.confirm_pw') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
